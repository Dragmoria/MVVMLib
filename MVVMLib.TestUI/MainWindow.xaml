<Window x:Class="MVVMLib.TestUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMLib.TestUI"
        xmlns:vm="clr-namespace:MVVMLib.TestUI.ViewModels"
        xmlns:views="clr-namespace:MVVMLib.TestUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vm:SomeOtherTestViewModel}">
                <views:SomeRandomView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TestViewModel}">
                <views:AnotherView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
